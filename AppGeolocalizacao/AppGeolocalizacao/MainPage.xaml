<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGeolocalizacao.MainPage">

    <StackLayout>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Start">
            <Image Margin="0,50,0,0" Source="xamarin_essentials"/>
            <Image Margin="0,0,0,10" Source="xamarin_essentials2"/>
            <Label Margin="0,0,0,10" Text="GEOLOCALIZAÇÃO" FontAttributes="Bold" FontSize="Large" TextColor="#CA6F1E" HorizontalOptions="Center"/>
            <Button x:Name="btnLocalizacao" Text="Ver Localização" BackgroundColor="Blue" TextColor="White" Clicked="btnLocalizacao_Clicked"/>
            <Label HorizontalTextAlignment="Center" x:Name="lblLatitude"/>
            <Label HorizontalTextAlignment="Center" x:Name="lblLongitude"/>
            <Button x:Name="btnVerMapa" Text="Ver Mapa" Clicked="btnVerMapa_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
